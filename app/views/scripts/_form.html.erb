<turbo-frame id="<%= dom_id script %>">
  <% if defined? message %>
    <%= message %>
  <% end %>
  <%= form_for(script, builder: DaisyFormBuilder) do |f| %>
    <%= f.group :name do %>
      <%= f.text_field :name %>
    <% end %>

    <%= f.group :content do %>
      <%= f.text_area :content, data: {controller: "code-editor", code_editor_language_value: file_extension_to_language(script.extension&.to_sym || :txt), code_editor_editorclass_value: "p-2 rounded"} %>
    <% end %>

    <%= f.submit %>
  <% end %>
</turbo-frame>
