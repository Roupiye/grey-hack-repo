<% title "Sign up" %>
<% content_for :title, "Sign up" %>

<%= render "devise/shared/form_card" do %>
  <%= form_for resource, as: resource_name, url: registration_path(resource_name), builder: DaisyFormBuilder, html: { data: {turbo: "false"}} do |f| %>
    <%= f.group :name do %>
      <%= f.text_field :name %>
    <% end %>

    <%= f.group :email do %>
      <%= f.text_field :email %>
    <% end %>

    <%= f.group :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) do %>
      <%= f.password_field :password %>
    <% end %>

    <%= f.group :password_confirmation, required: true do %>
      <%= f.password_field :password_confirmation %>
    <% end %>

    <div class="text-right">
      <%= f.submit "Sign up", class: "!float-none" %>
    </div>
  <% end %>
<% end %>
