<% content_for :title, "Forgot your password?" %>

<%= render "devise/shared/form_card" do %>

  <%= form_for resource, as: resource_name, url: password_path(resource_name), builder: DaisyFormBuilder, html: { method: :post, data: {turbo: "false"}} do |f| %>
    <%= f.group :email do %>
      <%= f.text_field :email %>
    <% end %>

    <div class="text-right">
      <%= f.submit "Send instructions", class: "!float-none" %>
    </div>
  <% end %>
<% end %>
