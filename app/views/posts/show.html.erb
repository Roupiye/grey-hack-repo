<div class="text-center text-3xl font-semibold">
  <%= @post.title.capitalize %>
</div>

<div class="text-center flex justify-center">
  <%= @post.category.name %>
  <%= octicon @post.category.icon, height: 16, class: "fill-current self-end mb-1 ml-2" %>
</div>

<div class="text-beaver-300 text-center mt-3 mb-10">
  <%= @post.summary %>
</div>

<% if @post.readme %>
  <div>
    <%= @post.readme %>
  </div>
<% end %>

<%= render(Scripts::Card::Component.new(script: Script.last)) %>
