<%= content_tag(@tag, @sys_params) do %>
  <% if head %>
    <thead class="bg-base-300">
      <%= head %>
    </thead>
  <% end %>
  <tbody class="divide-y divide-base-100">
    <% rows.each do |row| %>
      <%= row %>
    <% end %>
  </tbody>
  <% if foot %>
    <tfoot class="bg-base-300">
      <%= foot %>
    </tfoot>
  <% end %>
<% end %>
