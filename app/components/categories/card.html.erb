<%= content_tag(@tag, @sys_params) do %>
  <%= octicon @icon, width: @small ? 24 : 55, class: "fill-current #{ @small ? "mr-2 sm:mr-0 md:mr-2" : "m-auto md:m-0 md:mr-6"}", data: {"categories--card-target": "icon"} %>
  <div class="my-auto text-center <%= @small ? "text-md" : "text-2xl" %>  font-semibold">
    <%= @name %>
  </div>
<% end %>
