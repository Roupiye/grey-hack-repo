<div class="flex">
  <a href="<%= post_path @post %>" class="rounded-lg bg-beaver-800 hover:bg-beaver-700 w-full px-4 py-3 mb-4 block <%= "rounded-r-none" if current_user && @post.user == current_user %>">
    <div class="flex items-end">
      <span class="font-semibold text-xl">
        <%= @post.title.capitalize %>
      </span>
      <div class="text-beaver-300 ml-1">
        from <%= @post.user.name %>
      </div>
      <div class="ml-3 flex">
        <%= @post.category.name %>
        <%= octicon @post.category.icon, height:16, class: "fill-current ml-2 self-end mb-1" %>
      </div>
    </div>
    <div class="text-beaver-300">
      <%= @post.summary %>
    </div>
  </a>
  <% if current_user && @post.user == current_user %>
    <a href="<%= edit_post_path @post %>" class="mb-4 bg-beaver-800 hover:bg-gray-800 rounded-r-xl flex items-center px-4">
      <%= octicon "pencil", height:20, class: "fill-current" %>
    </a>
  <% end %>
</div>
